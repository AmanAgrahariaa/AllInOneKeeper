<div class="container-fluid container-fluid-custom pb-5 mb-5">
  <div class="row mb-4">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/bookmark">bookmark</a></li>
          <li class="breadcrumb-item active">
            <%= bookmark.title %>
          </li>
        </ol>
      </nav>
      <div class="col d-flex justify-content-between align-items-center">
        <h1 class="h3">View Bookmark</h1>
        <button type="button" class="btn btn-danger me-2" data-bs-toggle="modal" id="deleteButton"
          data-bs-target="#deleteModal">
          Delete
        </button>
      </div>
    </div>
  </div>

  <form action="/bookmark/item/<%= bookmarkID %>?_method=PUT" method="POST" class="position-relative">
    <div class="form-group mb-4">
      <input type="text" class="form-control fw-bold border-0 fs-4" id="title" name="title"
        value="<%= bookmark.title %>" placeholder="Title">
    </div>
 
     <div class="form-group mb-4">
      <input type="text" class="form-control" id="url" name="url" value="<%= bookmark.url %>"
        placeholder="Url...." style="border: none; background-color: white; color: blue; cursor: pointer; text-decoration: underline;"
        readonly onclick="window.open(this.value, '_blank');">
    </div>

    <div class="form-group mb-4">
      <input type="text" class="form-control" id="tags" name="tags" value="<%= bookmark.tags %>"
        placeholder="Tags..." data-role="tagsinput">
    </div>
    <div class="form-group mb-4">
      <textarea class="form-control pt-5 fs-4" id="body" name="body" placeholder="Take a note..."
        rows="12"><%= bookmark.body %></textarea>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-lg">Update</button>
    </div>
  </form>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">You are about to delete a bookmark</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>
          This will delete your bookmark <b class="fw-bold"><%= bookmark.title %></b><br />
          Are you sure?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <form action="/bookmark/item-delete/<%= bookmarkID %>?_method=DELETE" method="POST"
          class="position-relative">
          <button type="submit" class="btn btn-primary">Delete Bookmark</button>
        </form>
      </div>
    </div>
  </div>
</div>
