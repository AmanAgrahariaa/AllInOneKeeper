  <div class="container-fluid container-fluid-custom pb-5 mb-5">
    <div class="row mb-4">
      <div class="col">
        <h1>Hey, <%= userName %></h1>
      </div>
      <div class="col text-end">
        <a href="/password/add" class="btn btn-primary">+ New Password</a>
      </div>
    </div>
  
    <% if (passwords.length > 0) { %>
      <div class="row">
        <div class="col">
          <div class="table-responsive">
            <table class="table table-bordered table-hover" style="border-color: black;">
              <thead>
                <tr>
                  <th>Website</th>
                  <th>Category</th>
                  <th>Username</th>
                  <th>Password</th>
                  <th class="text-center">View</th>
                </tr>
              </thead>
              <tbody>
                <% for (let i = 0; i < passwords.length; i++) { %>
                  <tr style="cursor: pointer;">
                    <td><%= passwords[i].website %></td>
                    <td><%= passwords[i].category %></td>
                    <td><%= passwords[i].username %></td>
                    <td>
                      <input type="password" value="<%= passwords[i].password %>" readonly class="border-0 bg-transparent">
                    </td>
                    <td class="text-center">
                      <a href="/password/item/<%= passwords[i]._id %>"><i class="fas fa-info-circle" style="color: #333;"></i>
                      </i></a>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% } else { %>
      <div class="row">
        <div class="col-12 col-md-3">
          <img src="/img/human-3.svg" alt="Human pointing hand toward a create button" class="img-fluid">
        </div>
        <div class="col-12 col-md-9 mt-4">
          <h2>Okay...</h2>
          <h4>Let's start with your first password!<br><br>
            <a href="/password/add">Create one!</a>
          </h4>
        </div>
      </div>
    <% } %>
  
    <% if(passwords.length > 0) { %>
      <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center mt-5">
          <% if(current == 1) { %>
            <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
          <% } else { %>
            <li class="page-item"><a class="page-link" href="/password">First</a></li>
          <% }  %>
  
          <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
          <% if (i !== 1 ) { %>
            <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
          <% } %>
  
          <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if(i == current ) { %>
              <li class="page-item active" aria-current="page"><a class="page-link" href="#"><%= i %></a></li>
            <% } else { %>
              <li class="page-item"><a class="page-link" href="/password/?page=<%= i %>"><%= i %></a></li>
            <% } %>
  
            <% if(i == Number(current) + 4 && i < pages) { %>
              <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
            <% } %>
          <% } %>
  
          <% if (current == pages) { %>
            <li class="page-item disabled"><a class="page-link">Last</a></li>
          <% } else { %>
            <li class="page-item"><a href="/password/?page=<%= pages %>" class="page-link">Last</a></li>
          <% } %>
        </ul>
      </nav>
    <% } %>
  </div>
  